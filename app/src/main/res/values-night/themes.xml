        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_white</item>
        <item name="colorPrimaryVariant">@color/github_black_darker</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/github_purple</item>
        <item name="colorSecondaryVariant">@color/github_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>